- user = @user || User.new
~ form_for user, html: {class: 'form'}, remote: true do |f|
  .input.errors
  .input
    .label
      %i.icon-envelope.form-icon
      Email
    .field
      = f.text_field :username, class: 'text-input required'
  .input
    .label
      %i.icon-key.form-icon
      Password
    .field
      = f.password_field :password, class: 'text-input required'
  .input
    .label
      %i.icon-key.form-icon
      Password Comfirmation
    .field
      = password_field_tag :password_confirmation, '', class: 'text-input required'
  .input
    %button(href="#signup" class="continue") Submit
