%p
  %h2 Sign Up
%br
~ form_for @user do |f|
  .errors
    - unless @errors.blank?
      - @errors.each do |msg|
        - msg = "email already be taken" if msg == 'M u'
        .span5{style: "color: red;"}
          = msg
  .field.span12
    .span1
      %label Email
    .span4= f.email_field :username
  .field.span12
    .span1
      %label Password
    .span4= f.password_field :password
  .field.span12
    .span1
      %label Password Confirmation
    .span4= password_field_tag :password_confirmation
  .field.span12
    .span1= submit_tag 'Register'
