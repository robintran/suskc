!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "StartupShopKC"
   
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag "application"
    
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lobster", :media => "all"
  %body
    .top-bar
      .left
        .left-logo= link_to image_tag('logo.png'), '/'
        %i.icon-info-sign.info-icon
      .right
        - if current_user
          .add-company-right
            %span.add-icon= image_tag 'add.png'
            %span.add-company-copy
              = link_to 'Add your company', 'add_company'
              %span   
          = link_to "<i class='icon-signout signin-icon'></i>".html_safe, "/signout"
        - else
          .add-company-right
            %span.add-icon= image_tag 'add.png'
            %span.add-company-copy
              = link_to "Add Something", "add_something"# link_to 'Register', '/signup'
              %span  
          = link_to "<i class='icon-signin signin-icon'></i>".html_safe, '/signin'
      .search-input
        ~ form_tag search_path do
          = text_field_tag :term, '', class: 'search'
          %button.search-button
            =image_tag 'search.png'
    #mymap.gmap3{style: "position: fixed;"}
    .content
      = yield
    #fading-image
      = image_tag('loading.gif')
