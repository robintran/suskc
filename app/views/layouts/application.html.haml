!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "StartupShopKC"
    
    = javascript_include_tag "http://maps.google.com/maps/api/js?v=3.5&sensor=false"
    = javascript_include_tag "application"
    
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body{style: "height: 100%"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          #logo
            %a.brand(href="/") StartupShopKC
          #search
            ~ form_tag '/search', style: "margin: 0" do
              = text_field_tag :search
          #account
            .container{style: "text-align: right;"}
              .nav-collapse{style: "float: left;"}
                %ul.nav
                  - if current_user
                    %li
                      = link_to "hi #{current_user.username}"
                    %li
                      = link_to "Logout", "/signout"
                    %li= link_to "Add Your Company", new_location_path
                  - else
                    %li
                      = link_to "Login", "/signin"
                    %li= link_to "Register", "/signup"
    .container{style: "height: 100%"}
      .content{style: "height: 90%; width: 100%"}
        .row{style: "height: 100%; width: 100%; min-width: 1000px; float: left;"}
          - if controller_name == "home"
            .span{style: "height: 100%;width: 18%; min-width: 200px;"}
              #map-side-bar.well.sidebar-nav{style: "min-height: 90%"}
                %ul.nav.nav-list
                  - @locations.each do |loc|
                    .map-location(data-jmapping="{id: '#{loc.id}', point: {lat: #{loc.latitude}, lng: #{loc.longitude}}, category: 'All Companies'}")
                      .info-box
                        %p= loc.name
                        %p= loc.email
                  %li= link_to "Digital Companies", "#"
                  %li= link_to "Investors", "#"
                  %li= link_to "Co Working", "#"
            .span{style: "height: 100%; width: 77%; min-width: 500px;"}
              = notice
              = yield
          - else
            .span{style: "height: 100%; width: 100%; min-width: 500px;"}
              = notice
              = yield
      %footer
        %p &copy; Company 2012
