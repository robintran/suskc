#events.left-menu.full.hidden
  .background
    .title
      %i.icon-arrleft.title-icon
      %span.title-copy Upcoming Events
    .inside.inside-full.events-menu
      %ul.list-events
        - @events.each do |event|
          - date = DateTime.strptime(event.e_time, "%m/%d/%Y")
          %li
            %span
              = date.strftime("%b")
              %strong= date.day
            %div
              %strong= event.name
              %small 9:20 - 10:30
