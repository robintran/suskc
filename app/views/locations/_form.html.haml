- location ||= Location.new
~ form_for location, remote: true, html: {class: 'form', :multipart => true} do |f|
  .input.errors
  .input
    .label
      %i.icon-flag.form-icon
      Company Name
    .field
      = f.text_field :name, class: 'text-input required'
  .input
    .label
      %i.icon-map-marker.form-icon
      Address
    .field
      = f.text_field :address, class: 'text-input required'
  .input
    .label
      %i.icon-phone.form-icon
      Phone Number
    .field
      = f.text_field :phone, class: 'text-input required'
  .input
    .label
      %i.icon-envelope.form-icon
      Email
    .field
      = f.text_field :email, class: 'text-input required'
  .input
    .label
      %i.icon-globe.form-icon
      Web
    .field
      = f.text_field :url, value: "#{location.url.blank? ? 'http://' : location.url}", class: 'text-input'
  .input
    .label
      %i.icon-twitter.form-icon
      Twitter
    .field
      = f.text_field :twitter, value: "#{location.twitter.blank? ? '@' : location.twitter}", class: 'text-input'
  .input
    .label
      %i.icon-facebook.form-icon
      Facebook
    .field
      = f.text_field :facebook, class: 'text-input'
  .input
    .label
      %i.icon-comment.form-icon
      Description
    .field
      = f.text_area :description, class: 'text-input'
  .input
    .label
      %i.icon-picture.form-icon
      Logo
    .field
      = file_field_tag :logo, size: '13'
